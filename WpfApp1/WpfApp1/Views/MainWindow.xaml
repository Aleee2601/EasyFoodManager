<Window x:Class="EasyFoodManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyFoodManager - Start" Height="300" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,5" />
                </Style>
            </StackPanel.Resources>

            <Button Content="Continuă fără cont" Click="OnContinueWithoutAccount" Height="35" />
            <Button Content="Autentificare" Click="OnLogin" Height="35" />
            <Button Content="Creează cont" Click="OnRegister" Height="35" />
        </StackPanel>
    </Grid>
</Window>